{
	"manifest_version": 3,
	"name": "PEPT",
	"version": "1.0",
	"description": "A browser extension to prevent potentially seizure-inducing content from being shown.",

	"permissions": [
		"<all_urls>",
		"tabs"
	],
	
	"action": {
		"default_popup": "popup.html"
	},

	"options_ui": {
		"page": "options.html"
  	},

	"background": {
		"scripts": ["background.js"]
	},

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	]
}
